@{
    ViewData["Title"] = "Plano de Contas e Gastos Mensais";
}

<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-primary btn-lg" onclick="Novo()">Criar novo item de Contas</button>

<hr />

<table class="table table-success table-striped">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Descrição</th>
            <th scope="col">Tipo</th>
            <th scope="col">Editar Plano</th>
            <th scope="col">Excluir Plano</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in (List<PlanoContaModel>)ViewBag.ListaPlanoConta)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Descricao</td>
                    <td>@item.Tipo</td>
                    <td><button type="button" class="btn btn-warning" onclick="Editar(@item.Id.ToString())">Editar</button></td>
                    <td><button type="button" class="btn btn-danger" onclick="Excluir(@item.Id.ToString())">Excluir</button></td>
                </tr>
            }
        }
    </tbody>
</table>

<script>
    function Excluir(id) {
        window.location.href = "../PlanoConta/Excluir/" + id
    }

    function Editar(id) {
        window.location.href = "../PlanoConta/Cadastro/" + id
    }

    function Novo() {
        window.location.href = "../PlanoConta/Cadastro/"
    }
</script>